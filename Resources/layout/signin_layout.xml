<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_marginTop="30dp"
      android:id="@+id/login_input_email"
      android:minWidth="25px"
      android:minHeight="25px">
    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/et_email2"
        android:maxLines="1"
        android:hint="Email"
    />
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout
      android:layout_below="@+id/login_input_email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:id="@+id/login_input_password">
    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/et_password2"
        android:maxLines="1"
        android:hint="Password"
    />
  </com.google.android.material.textfield.TextInputLayout>
  <LinearLayout
      android:layout_below="@+id/login_input_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_marginTop="20dp"
      android:id="@+id/login_input_btn">
    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btn_login2"
    />
  </LinearLayout>
  <TextView
      android:layout_below="@+id/login_input_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btn_forget_password"
      android:text="Forget Password"
      android:layout_centerHorizontal="true"
      android:clickable="true"
      android:textStyle="bold"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
    />
  <LinearLayout
      android:layout_below="@+id/btn_forget_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:id="@+id/layout_or">
    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#c4c8c9"
        android:layout_margin="5dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:padding="5dp"
    />
    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#c4c8c9"
        android:layout_margin="5dp"
    />
  </LinearLayout>
  <TextView
      android:layout_below="@+id/layout_or"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btn_sign_up"
      android:text="Sign Up"
      android:layout_centerHorizontal="true"
      android:clickable="true"
      android:textStyle="bold"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
    />
</RelativeLayout>
